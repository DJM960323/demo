<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.exam.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.exam.entity.User">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
    </resultMap>


    <insert id="addUser">
        INSERT INTO `user`(`name`,password,phone)
        VALUES(#{userParam.name},#{userParam.password},#{userParam.phone})
    </insert>
    <delete id="deleteUser">
        UPDATE `user`
        SET visiable = 0
        WHERE id = #{id}
    </delete>

    <select id="findUserById" resultMap="BaseResultMap">
        SELECT * FROM `user`
        WHERE visiable = 1 AND id = #{id}
    </select>

    <select id="findAllUser" resultMap="BaseResultMap">
        SELECT * FROM `user`
        WHERE visiable = 1
    </select>

    <update id="updateUser">
        UPDATE `user`
        SET `name` = #{userParam.name},password = #{userParam.password},phone = #{userParam.phone}
        WHERE visiable = 1 and id = #{id}
    </update>

</mapper>